docker container run -it ubuntu /bin/bash
# do not run systemd, therefore no system side command ex: systemctl
root>> apt update 
root>> apt upgrade
root>>apt install python3
root>>apt install python3-dev
root>>apt install pip
root>>pip install pymysql
# all the software will disappear when you exit this ubuntu container
# if you want to keep the downloads, write a dockerfile and write down the software you want to install and build another image.
